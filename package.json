{
  "name": "sn-toast",
  "version": "1.1.14",
  "description": "A beautiful, animated toast notification library for React with Tailwind CSS",
  "type": "module",
  "main": "dist/Buzzly.umd.cjs",
  "module": "dist/Buzzly.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/Buzzly.umd.cjs",
      "import": "./dist/Buzzly.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "test": "node --test tests/*.test.mjs"
  },
  "keywords": [
    "react",
    "toast",
    "notification",
    "buzzly",
    "tailwindcss",
    "motion",
    "react-component",
    "alert",
    "message",
    "snackbar",
    "ui"
  ],
  "author": "Mohamed elhaissan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohamed-elhaissan/sn-toast.git"
  },
  "bugs": {
    "url": "https://github.com/mohamed-elhaissan/sn-toast/issues"
  },
  "homepage": "https://github.com/mohamed-elhaissan/sn-toast#readme",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "framer-motion": "^12.9.2",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@tailwindcss/vite": "^4.1.6",
    "@types/node": "^22.15.24",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.3.1",
    "vite-plugin-dts": "^4.5.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
